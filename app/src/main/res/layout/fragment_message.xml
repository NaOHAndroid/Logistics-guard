<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pearl_white"
    android:orientation="vertical"
    android:padding="5dp">

    <cc.a5156.xdkp.common.view.BaseItem
        android:id="@+id/itemMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:text="消息" />

    <cc.a5156.xdkp.common.view.BaseItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:text="群聊" />

    <cc.a5156.xdkp.common.view.BaseItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:text="公告" />

    <cc.a5156.xdkp.common.view.BaseItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:text="通讯录（公司团队、客户通讯录、个人通讯录）" />

    <Button
        android:id="@+id/btTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身份证"
        android:visibility="visible" />

    <Button
        android:id="@+id/btCallHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通话记录"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btStartService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="启动录音服务"
            android:visibility="visible" />

        <Button
            android:id="@+id/btStopService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止录音服务"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/btPlayRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放录音"
        android:visibility="visible" />
</LinearLayout>